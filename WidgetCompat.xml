<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Button name="ImprovedAddonListOkayButtonTemplate" inherits="SharedButtonSmallTemplate" virtual="true"/>

    <Frame name="ImprovedAddonListSwitchConfigurationPromptDialogTemplate" parent="UIParent" virtual="true" inherits="BasicFrameTemplateWithInset" frameStrata="DIALOG" hidden="true">
        <Size x="170" y="260"/>
        <Layers>
			<Layer level="OVERLAY">
				<FontString inherits="GameFontNormal" parentKey="TitleText" wordwrap="false" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOP" x="0" y="-5"/>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT" x="-24"/>
					</Anchors>
				</FontString>
			</Layer>
        </Layers>
        <Anchors>
            <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="MultiBarLeft" x="-20" />
            <Anchor point="BOTTOM" relativePoint="TOP" relativeTo="MicroButtonAndBagsBar" y="20" />
        </Anchors>
		<Animations>
			<AnimationGroup parentKey="Anim">
				<Alpha parentKey="Alpha" duration="8" order="1" fromAlpha="1" toAlpha="0"/>
                <Scripts>
                    <OnFinished>
                        self:GetParent():Hide()
                    </OnFinished>
                </Scripts>
			</AnimationGroup>
		</Animations>
        <Scripts>
            <OnEnter>
                local duration = self.Anim.Alpha:GetDuration()
                self.Anim.alphaTimeLeft = math.max(3, math.ceil(duration*(1-self.Anim.Alpha:GetProgress())))
                self.Anim:Stop()
                self.Anim.Alpha:SetDuration(self.Anim.alphaTimeLeft)
            </OnEnter>
            <OnLeave>
                self.Anim:Play()
            </OnLeave>
            <OnShow>
                self.Anim:Stop()
                self.Anim:Play()
            </OnShow>
            <OnHide>
                self.Anim:Stop()
            </OnHide>
        </Scripts>
    </Frame>    
</Ui>